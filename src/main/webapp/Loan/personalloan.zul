			<div id="win1" height="400px" sclass="upperdiv"
				onCreate="updateTotal()"  style="padding:30px; " >
				<hbox spacing="50px">
					<vbox>
						<hlayout spacing="10px">
							<label value="Select Loan Amount" />
							<intbox id="loanAmountBox" value="50000"
								width="100px"
								onChange="loanAmountSlider.setCurpos(self.getValue()); updateTotal();" />
						</hlayout>

						<slider id="loanAmountSlider" curpos="50000"
							maxpos="5000000" pageIncrement="1000" width="300px"
							onScroll="loanAmountBox.setValue(self.curpos); updateTotal();" />

						<hlayout spacing="10px"
							style="margin-top:15px;">
							<label value="Interest Rate (p.a)" />
							<decimalbox id="interestRateBox"
								value="9.91" format="##.##" width="80px"
								onChange="interestRateSlider.setCurpos((int)(self.getValue() * 10)); updateTotal();" />
							<label value="%" />
						</hlayout>

						<slider id="interestRateSlider" curpos="99"
							minpos="99" maxpos="200" pageIncrement="1" width="300px"
							onScroll="interestRateBox.setValue(new java.math.BigDecimal(self.curpos / 10.0)); updateTotal();" />

						<hlayout spacing="10px"
							style="margin-top:15px;">
							<label value="Number of Months" />
							<intbox id="numMonthsBox" value="12"
								width="80px"
								onChange="numMonthsSlider.setCurpos(self.getValue()); updateTotal();" />
						</hlayout>

						<slider id="numMonthsSlider" curpos="12"
							minpos="12" maxpos="84" pageIncrement="1" width="300px"
							onScroll="numMonthsBox.setValue(self.curpos); updateTotal();" />
					</vbox>
					<div sclass="calculate">
						<vlayout style="margin-top:50px;">
							<label id="emiLabel" value="Monthly EMI: â‚¹0"
								style="font-size:16px; font-weight:bold;" />
							<label id="totalPayableLabel"
								value="Total Payable: â‚¹0"
								style="font-size:16px; font-weight:bold;" />
						</vlayout>
					</div>
					<div sclass="loan-video-widget">

							width="600px" height="auto" style="border-radius:10px;" />
					</div>
				</hbox>
				<zscript>
	void updateTotal() {
		double P = loanAmountBox.getValue();
		double annualRate = interestRateBox.getValue().doubleValue();
		double r = annualRate / 12 / 100;
		int n = numMonthsBox.getValue();

		double EMI;
		if (r > 0) {
			EMI = (P * r * Math.pow(1 + r, n)) / (Math.pow(1 + r, n) - 1);
		} else {
			EMI = P / n;
		}
		double totalPayable = EMI * n;

		java.text.DecimalFormat df = new java.text.DecimalFormat("#,##0.00");
		totalPayableLabel.setValue("Total Payable: â‚¹" + df.format(totalPayable));
		if (n == 0) {
			numMonthsBox.setValue(12);
			n = 12;
		}
		emiLabel.setValue("Monthly EMI: â‚¹" + df.format(EMI));
	}
</zscript>

/* Remove ZK's default popup look */
.z-popup {
    background: transparent !important;
    border: none !important;
    box-shadow: none !important;
    padding: 0 !important;
}

/* Dropdown styling */
.drop {
	

    width: 600px; /* consistent dropdown width */
    height: 250px;
    background-color: #004aad;
    border: 1px solid #ccc; /* single border */
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
    padding: 15px;
    box-sizing: border-box;
    z-index: 1000;
   <!--  margin-top:40px; -->
}

/* Make popup appear right below nav bar */
.nav-links > div > .z-popup {
    position: absolute !important;
    top: 100px !important; /* same as nav-bar height */
    left: 0 !important;
}

/* Optional: make popup align with its parent tab */
.nav-links > div {
	    margin-top: 35px;
    position: relative;
    width: 100%;
    height: 44px;
    
    
}
.nav-links > div > .z-popup {

    left: 0 !important;
}




/* Base styles â€” already yours */

/* Responsive breakpoints */

/* Tablet */
@media (max-width: 1024px) {
    .top-bar {
        flex-direction: column;
        align-items: flex-start;
        font-size: 11px;
    }
    .top-links {
        flex-wrap: wrap;
        width: 100%;
        justify-content: flex-start;
    }
    .nav-bar {
        flex-wrap: wrap;
        height: auto;
        padding: 10px;
    }
    .logo img {
        height: 50px;
        width: auto;
    }
    .nav-links {
        width: 100%;
        justify-content: space-around;
    }
    .nav-links > div {
        margin-top: 10px;
    }
    .nav-buttons button {
        height: 38px;
        width: 90px;
        font-size: 14px;
    }
    .drop {
        width: 90%;
        height: auto;
    }
    .adds img {
        width: 100%;
        height: auto;
    }
}

/* Mobile */
@media (max-width: 768px) {
    .top-bar {
        padding: 5px 10px;
    }
    .nav-bar {
        flex-direction: column;
        align-items: flex-start;
    }
    .nav-links {
        flex-direction: column;
        align-items: flex-start;
        width: 100%;
    }
    .navs {
        width: 100%;
        justify-content: flex-start;
    }
    .nav-buttons {
        margin-top: 10%;
        width: 50%;
        display: flex;
        justify-content: flex-start;
    }
    .nav-buttons button {
        flex: 1;
        margin-left: 0;
        margin-right: 5px;
    }
    .drop {
        position: static !important;
        width: 100% !important;
    }
    .tab-content {
        width: 100%;
        height: auto;
    }
}

